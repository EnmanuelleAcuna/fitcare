@model EditarTipoEjercicioViewModel

@{
	ViewBag.Title = "Tipos de ejercicio";
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-breadcrumb">
	<div class="row">
		<div class="col-5 align-self-center">
			<h4 class="page-title">Modificar tipo de ejercicio</h4>
		</div>
		<div class="col-7 align-self-center">
			<div class="d-flex align-items-center justify-content-end">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="@Url.Action("Administracion", "Home")">Administración</a>
						</li>
						<li class="breadcrumb-item">
							<a href="@Url.Action("ListarTipoEjercicio")">Tipos de ejercicio</a>
						</li>
						<li class="breadcrumb-item active" aria-current="page">
							Modificar
						</li>
					</ol>
				</nav>
			</div>
		</div>
	</div>
</div>

<div class="container-fluid">
	<div class="row">
		<div class="col-12">
			<div class="card shadow-sm">
				<div class="card-body">
					@using (Html.BeginForm("EditarTipoEjercicio", "Ejercicios", FormMethod.Post, new { autocomplete = "off" }))
					{
						@Html.AntiForgeryToken()
						@Html.HiddenFor(model => model.Id)

						<div class="row">
							<div class="col-md-12">
								@Html.ValidationSummary(true, "", new { @class = "text-danger" })
							</div>
						</div>

						<div class="row">
							<div class="col-sm-12 col-md-4">
								<div class="form-group">
									@Html.LabelFor(model => model.Codigo)
									@Html.TextBoxFor(model => model.Codigo, "", new { @class = "form-control form-control-sm" })
									@Html.ValidationMessageFor(Model => Model.Codigo)
								</div>
							</div>

							<div class="col-sm-12 col-md-4">
								<div class="form-group">
									@Html.LabelFor(model => model.Nombre)
									@Html.TextBoxFor(model => model.Nombre, "", new { @class = "form-control form-control-sm" })
									@Html.ValidationMessageFor(Model => Model.Nombre)
								</div>
							</div>

							<div class="col-sm-12 col-md-4">
								<div class="form-group">
									@Html.LabelFor(model => model.Estado)
									<br />
									@Html.EditorFor(model => model.Estado, "", new { @class = "form-control" })
								</div>
							</div>

							<div class="col-12">
								<input value="Guardar" class="btn btn-sm btn-default" type="submit" />
								@Html.ActionLink("Regresar", "ListarTiposEjercicio", null, null, new { @class = "btn btn-sm btn-secondary" })
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
