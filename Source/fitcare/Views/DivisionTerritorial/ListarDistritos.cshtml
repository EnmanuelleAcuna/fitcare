@model IEnumerable<DistritoViewModel>

@{
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
	ViewBag.Title = "Distritos";
}

<div class="page-breadcrumb">
	<div class="row">
		<div class="col-5 align-self-center">
			<h4 class="page-title">Lista de distritos</h4>
		</div>
		<div class="col-7 align-self-center">
			<div class="d-flex align-items-center justify-content-end">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="@Url.Action("Administracion", "Home")">Administraci√≥n</a>
						</li>
						<li class="breadcrumb-item active" aria-current="page">
							Distritos
						</li>
					</ol>
				</nav>
			</div>
		</div>
	</div>
</div>

<div class="container-fluid">
	<div class="row">
		<div class="col-12">
			<div class="card shadow-sm">
				<div class="card-body">
					<a asp-action="AgregarDistrito" class="btn btn-sm btn-default">Agregar distrito</a>

					<hr />

					<div class="table-responsive">
						<table class="table table-hover table-sm">
							<thead>
								<tr>
									<th nowrap>@Html.DisplayNameFor(m => m.FirstOrDefault().Nombre)</th>
									<th nowrap>@Html.DisplayNameFor(m => m.FirstOrDefault().Canton)</th>
									<th nowrap>@Html.DisplayNameFor(m => m.FirstOrDefault().Estado)</th>
									<th nowrap>@Html.DisplayNameFor(m => m.FirstOrDefault().IdINEC)</th>
									<th>Acciones</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var Distrito in Model)
								{
									<tr>
										<td>@Distrito.Nombre</td>
										<td>@Distrito.Canton.Nombre</td>
										<td>@Distrito.Estado</td>
										<td>@Distrito.IdINEC</td>
										<td>
											<div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
												<a class="btn btn-sm btn-secondary" asp-controller="DivisionTerritorial" asp-action="EditarDistrito"
													asp-route-id="@Distrito.Id">Modificar</a>
												<a class="btn btn-sm btn-danger" asp-controller="DivisionTerritorial" asp-action="EliminarDistrito"
													asp-route-id="@Distrito.Id">Eliminar</a>
											</div>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
