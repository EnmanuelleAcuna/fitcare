modal.find('.modal-body .idinec').text(data.idINEC);
modal.find('.modal-body .creado-por').text(data.usuarioCrea);
modal.find('.modal-body .creado-el').text(data.fechaCreacion);
modal.find('.modal-body .modificado-por').text(data.usuarioModifica);
modal.find('.modal-body .modificado-el').text(data.fechaModifica);
}

