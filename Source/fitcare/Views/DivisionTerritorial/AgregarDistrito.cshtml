@model AgregarDistritoViewModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Distritos";
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-5 align-self-center">
            <h4 class="page-title">Agregar nuevo distrito</h4>
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Administracion", "Home")">Administración</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Index")">Distritos</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Agregar
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    @using (Html.BeginForm("Agregar", "DivisionTerritorial", FormMethod.Post, new { autocomplete = "off" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-12">
                                @Html.ValidationSummary(true, "")
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12 col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Nombre)
                                    @Html.TextBoxFor(model => model.Nombre, "", new { @class = "form-control form-control-sm", placeholder = "Digite el nombre del distrito" })
                                    @Html.ValidationMessageFor(model => model.Nombre)
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-3">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.IdCanton)
                                    @Html.DropDownListFor(model => model.IdCanton, new List<SelectListItem>(ViewBag.ListaCantones), "Seleccione un canton", new { @class = "form-control form-control-sm" })
                                    @Html.ValidationMessageFor(model => model.IdCanton)
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-2">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.IdINEC)
                                    @Html.TextBoxFor(model => model.IdINEC, "", new { @class = "form-control form-control-sm" })
                                    @Html.ValidationMessageFor(model => model.IdINEC)
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-3">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Estado)
                                    <br />
                                    @Html.EditorFor(model => model.Estado, "", new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="col-12">
                                <input value="Guardar" class="btn btn-sm btn-default" type="submit" />
                                @Html.ActionLink("Regresar", "Index", null, null, new { @class = "btn btn-sm btn-secondary" })
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
