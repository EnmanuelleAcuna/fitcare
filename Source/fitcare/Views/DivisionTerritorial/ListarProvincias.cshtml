@model IEnumerable<ProvinciaViewModel>

@{
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
	ViewBag.Title = "Provincias";
}

<div class="page-breadcrumb">
	<div class="row">
		<div class="col-5 align-self-center">
			<h4 class="page-title">Lista de provincias</h4>
		</div>
		<div class="col-7 align-self-center">
			<div class="d-flex align-items-center justify-content-end">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="@Url.Action("Administracion", "Home")">Administración</a>
						</li>
						<li class="breadcrumb-item active" aria-current="page">
							Provincias
						</li>
					</ol>
				</nav>
			</div>
		</div>
	</div>
</div>

<div class="container-fluid">
	<div class="row">
		<div class="col-12">
			<div class="card shadow-sm">
				<div class="card-body">
					<a asp-action="AgregarProvincia" class="btn btn-sm btn-default">Agregar</a>

					<hr />

					<div class="table-responsive">
						<table class="table table-hover table-sm">
							<thead>
								<tr>
									<th>@Html.DisplayNameFor(m => m.FirstOrDefault().Nombre)</th>
									<th>@Html.DisplayNameFor(m => m.FirstOrDefault().Estado)</th>
									<th>Acciones</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var Provincia in Model)
								{
									<tr>
										<td>@Provincia.Nombre</td>
										<td>@Provincia.Estado</td>
										<td>
											<div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
												<button id="BtnDetalle" class="btn btn-sm btn-success" data-toggle="modal" data-target="#ModalDetalle"
													data-idprovincia="@Provincia.Id">Detalle</button>
												<a class="btn btn-sm btn-secondary" asp-controller="DivisionTerritorial" asp-action="EditarProvincia"
												asp-route-id="@Provincia.Id">Modificar</a>
												<a class="btn btn-sm btn-danger" asp-controller="DivisionTerritorial" asp-action="EliminarProvincia"
												asp-route-id="@Provincia.Id">Eliminar</a>
											</div>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<partial name="_Detalle" />

@section Scripts {
	<script type="text/javascript">
		$('#ModalDetalle').on('show.bs.modal', function (event)
		{
			var button = $(event.relatedTarget); // Button that triggered the modal
			var IdProvincia = button.data('idprovincia'); // Extract info from data-* attributes

			$("#ModalDetalle").find('.modal-title .nombre').text("Cargando...");

			// Initiate an AJAX request here(and then do the updating in a callback).
			$.ajax({
				url: '@Url.Action("ObtenerDetalleProvincia")',
				data: { Id: IdProvincia },
				dataType: "json",
				type: 'GET',
				success: handleData,
				error: handleError
			});
		});

		function handleData(data)
		{
			// Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
			var modal = $("#ModalDetalle");
			modal.find('.modal-title .nombre').text(data.nombre);
			modal.find('.modal-body .estado').text(data.estado);
			modal.find('.modal-body .creado-por').text(data.usuarioCrea);
			modal.find('.modal-body .creado-el').text(data.fechaCreacion);
			modal.find('.modal-body .modificado-por').text(data.usuarioModifica);
			modal.find('.modal-body .modificado-el').text(data.fechaModifica);
		}

		function handleError()
		{
			// Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
			var modal = $("#ModalDetalle");
			modal.find('.modal-title .nombre').text("Error al obtener la información");
			modal.find('.modal-body .estado').text('N/A');
			modal.find('.modal-body .creado-por').text('N/A');
			modal.find('.modal-body .creado-el').text('N/A');
			modal.find('.modal-body .modificado-por').text('N/A');
			modal.find('.modal-body .modificado-el').text('N/A');
		}
	</script>
}
