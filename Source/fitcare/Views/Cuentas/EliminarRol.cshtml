@model EditarRolViewModel

@{
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
	ViewBag.Title = "Roles";
}

<div class="page-breadcrumb">
	<div class="row">
		<div class="col-5 align-self-center">
			<h4 class="page-title">Eliminar rol</h4>
		</div>
		<div class="col-7 align-self-center">
			<div class="d-flex align-items-center justify-content-end">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="@Url.Action("Administracion", "Home")">Administración</a>
						</li>
						<li class="breadcrumb-item">
							<a href="@Url.Action("ListarRoles")">Roles</a>
						</li>
						<li class="breadcrumb-item active" aria-current="page">
							Eliminar
						</li>
					</ol>
				</nav>
			</div>
		</div>
	</div>
</div>

<div class="container-fluid">
	<div class="row">
		<div class="col-12">
			<div class="card shadow-sm">
				<div class="card-body">
					@using (Html.BeginForm("EliminarRol", "Cuentas", FormMethod.Post, new { autocomplete = "off" }))
					{
						@Html.AntiForgeryToken()
						@Html.HiddenFor(model => model.IdRol)

						<div class="row">
							<div class="col-md-12">
								@Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
							</div>
						</div>

						<div class="row">
							<div class="col-sm-12">
								<h4>
									¿Seguro que desea eliminar el rol <b>@Html.DisplayFor(model => model.Nombre)</b>?
								</h4>
							</div>


							<div class="col-12">
								<input value="Eliminar" class="btn btn-sm btn-danger" type="submit" />
								@Html.ActionLink("Regresar", "ListarRoles", null, null, new { @class = "btn btn-sm btn-secondary" })
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>
