@model IEnumerable<ClienteInstructorViewModel>

@{
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
	ViewBag.Title = "Instructores";
}

<!-- ============================================================== -->
<!-- Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<div class="page-breadcrumb">
	<div class="row">
		<div class="col-5 align-self-center">
			<h4 class="page-title">Lista de Instructores</h4>
		</div>
		<div class="col-7 align-self-center">
			<div class="d-flex align-items-center justify-content-end">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="@Url.Action("Administracion", "Home")">Administración</a>
						</li>
						<li class="breadcrumb-item active" aria-current="page">
							Instructores
						</li>
					</ol>
				</nav>
			</div>
		</div>
	</div>
</div>
<!-- ============================================================== -->
<!-- End Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<!-- ============================================================== -->
<!-- Container fluid  -->
<!-- ============================================================== -->
<div class="container-fluid">
	<!-- ============================================================== -->
	<!-- Start Page Content -->
	<!-- ============================================================== -->
	<div class="row">
		<div class="col-12">
			<div class="card shadow-sm">
				<div class="card-body">
					<a asp-action="Nuevo" class="btn btn-sm btn-default">Registrar instructor</a>

					<hr />

					<div class="table-responsive">
						<table class="table table-hover table-sm">
							<thead>
								<tr>
									<th>@Html.DisplayNameFor(m => m.FirstOrDefault().Nombre)</th>
									<th>@Html.DisplayNameFor(m => m.FirstOrDefault().Correo)</th>
									<th>@Html.DisplayNameFor(m => m.FirstOrDefault().Estado)</th>
									<th>Acciones</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var Usuario in Model)
								{
									<tr>
										<td>@Usuario.Nombre</td>
										<td>@Usuario.Correo</td>
										<td>@Usuario.Estado</td>
										<td>
											<div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
												<a class="btn btn-sm btn-secondary" asp-controller="Instructores" asp-action="Editar"
												asp-route-id="@Usuario.IdUsuario">Modificar</a>
												<a class="btn btn-sm btn-danger" asp-controller="Usuarios" asp-action="Eliminar"
												asp-route-id="@Usuario.IdUsuario">Eliminar</a>
											</div>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- ============================================================== -->
	<!-- End Page Content -->
	<!-- ============================================================== -->
</div>
<!-- ============================================================== -->
<!-- End Container fluid  -->
<!-- ============================================================== -->
