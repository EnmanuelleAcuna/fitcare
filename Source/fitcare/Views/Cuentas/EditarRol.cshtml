@model EditarRolViewModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Roles";
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-5 align-self-center">
            <h4 class="page-title">Modificar rol</h4>
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Administracion", "Home")">Administraci√≥n</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("ListarRoles")">Roles</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Modificar
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    @using (Html.BeginForm("EditarRol", "Cuentas", FormMethod.Post, new { autocomplete = "off" })) {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.IdRol)

                        <div class="row">
                            <div class="col-md-12">
                                @Html.ValidationSummary(true, "")
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12 col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Nombre)
                                    @Html.TextBoxFor(model => model.Nombre, "", new { @class = "form-control form-control-sm", placeholder = "Digite el nombre" })
                                    @Html.ValidationMessageFor(model => model.Nombre)
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Descripcion)
                                    @Html.TextBoxFor(model => model.Descripcion, "", new { @class = "form-control form-control-sm", placeholder = "Digite la descripcion" })
                                    @Html.ValidationMessageFor(model => model.Descripcion)
                                </div>
                            </div>

                            <div class="col-12">
                                <input value="Guardar" class="btn btn-sm btn-default" type="submit" />
                                @Html.ActionLink("Regresar", "ListarRoles", null, null, new { @class = "btn btn-sm btn-secondary" })
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
