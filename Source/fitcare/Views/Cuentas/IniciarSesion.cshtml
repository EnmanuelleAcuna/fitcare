@model IniciarSesionViewModel

@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="es-CR">

<head>
	<meta charset="utf-8" />
	<meta content="text/html" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1">
	<meta http-equiv="X-UA-Compatible Content-Type" content="ie=edge">
	<title>fitcare</title>

	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
	<link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
</head>

<body>
	<div class="container">
		<div class="row">
			<div class="col-sm-12 col-md-4 offset-md-4">
				<img src="~/images/fitcare_logo.png" alt="Logo fitcare" class="card-img-top mt-4 mb-2 max-height-128px">
				<h4 class="text-center mt-3 mb-4 text-primary">Autenticarse</h4>

				<div class="card">
					<div class="card-body">
						@using (Html.BeginForm("IniciarSesion", "Cuentas", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, true, new
						{
							autocomplete =
								"off"
						}))
						{
							@Html.AntiForgeryToken()

							<div class="form-group">
								@Html.LabelFor(m => m.Correo, new { @class = "font-bold" })
								@Html.EditorFor(m => m.Correo, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
								@Html.ValidationMessageFor(m => m.Correo, "", new { @class = "text-danger" })
							</div>

							<div class="form-group">
								@Html.LabelFor(m => m.Contrasena, new { @class = "font-bold" })
								@Html.PasswordFor(m => m.Contrasena, new { @class = "form-control form-control-sm" })
								@Html.ValidationMessageFor(m => m.Contrasena, "", new { @class = "text-danger" })
							</div>

							<div class="center red-text font-bold">
								@Html.ValidationSummary(true, "", new { @class = "data-error" })
							</div>

							<div class="w-100 text-center">
								<button type="submit" value="Iniciar sesión" class="btn btn-sm btn-primary btn-block font-bold mb-2">
									Iniciar sesión
								</button>

								<small>
									@Html.ActionLink("¿Olvidó su contraseña?", "SolicitarContrasena", "Cuentas", null, new { @class = "text-secondary", title =
								"¿Olvidó su contraseña?" })
								</small>
							</div>
						}
					</div>
				</div>
			</div>
		</div>
	</div>

	<script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
	<script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>

</html>
