@model IEnumerable<InicioTipoEjercicioViewModel>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Tipos de ejercicio";
}

<!-- ============================================================== -->
<!-- Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-5 align-self-center">
            <h4 class="page-title">Lista de tipos de ejercicio</h4>
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Administracion", "Home")">Administración</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Tipos de ejercicio
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- End Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<!-- ============================================================== -->
<!-- Container fluid  -->
<!-- ============================================================== -->
<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <a asp-action="Nuevo" class="btn btn-sm btn-default">Agregar tipo de ejercicio</a>

                    <hr />

                    <div class="table-responsive">
                        <table class="table table-hover table-sm">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Codigo)</th>
                                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Nombre)</th>
                                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Estado)</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var TipoEjercicio in Model) {
                                    <tr>
                                        <td>@TipoEjercicio.Codigo</td>
                                        <td>@TipoEjercicio.Nombre</td>
                                        <td>@TipoEjercicio.Estado</td>

                                        <td>
                                            <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                                                <button id="BtnDetalle" class="btn btn-sm btn-success" data-toggle="modal" data-target="#ModalDetalle" data-idtipoejercicio="@TipoEjercicio.IdTipoEjercicio">Detalle</button>
                                                <a class="btn btn-sm btn-secondary" asp-controller="TiposEjercicio" asp-action="Editar" asp-route-id="@TipoEjercicio.IdTipoEjercicio">Modificar</a>
                                                <a class="btn btn-sm btn-danger" asp-controller="TiposEjercicio" asp-action="Eliminar" asp-route-id="@TipoEjercicio.IdTipoEjercicio">Eliminar</a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Page Content -->
    <!-- ============================================================== -->
</div>
<!-- ============================================================== -->
<!-- End Container fluid  -->
<!-- ============================================================== -->

<partial name="_Detalle" />

@section Scripts {
    <script type="text/javascript">
        $('#ModalDetalle').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget); // Button that triggered the modal
            var IdTipoEjercicio = button.data('idtipoejercicio'); // Extract info from data-* attributes

            $("#ModalDetalle").find('.modal-title .nombre').text("Cargando...");

            // Initiate an AJAX request here(and then do the updating in a callback).
            $.ajax({
                url: '@Url.Action("Detalle")',
                data: { Id: IdTipoEjercicio },
                dataType: "json",
                type: 'GET',
                success: handleData,
                error: handleError
            });
        });

        function handleData(data) {
console.log(data);

            // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
            var modal = $("#ModalDetalle");
            modal.find('.modal-body .codigo').text(data.codigo);
            modal.find('.modal-title .nombre').text(data.nombre);
            modal.find('.modal-body .estado').text(data.estado);
            modal.find('.modal-body .creado-por').text(data.usuario_Crea);
            modal.find('.modal-body .creado-el').text(data.fecha_Crea);
            modal.find('.modal-body .modificado-por').text(data.usuario_Modi);
            modal.find('.modal-body .modificado-el').text(data.fecha_Modi);
        }

        function handleError() {
            // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
            var modal = $("#ModalDetalle");
            modal.find('.modal-body .codigo').text('N/A');
            modal.find('.modal-title .nombre').text("Error al obtener la información");
            modal.find('.modal-body .estado').text('N/A');
            modal.find('.modal-body .creado-por').text('N/A');
            modal.find('.modal-body .creado-el').text('N/A');
            modal.find('.modal-body .modificado-por').text('N/A');
            modal.find('.modal-body .modificado-el').text('N/A');
        }
    </script>
}