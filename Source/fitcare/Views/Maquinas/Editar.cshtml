@* @model EditarMaquinaViewModel

@{
Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
ViewBag.Title = "Máquinas";
}

<!-- ============================================================== -->
<!-- Bread crumb -->
<!-- ============================================================== -->
<div class="page-breadcrumb">
<div class="row">
<div class="col-5 align-self-center">
<h4 class="page-title">Modificar máquina</h4>
</div>
<div class="col-7 align-self-center">
<div class="d-flex align-items-center justify-content-end">
<nav aria-label="breadcrumb">
<ol class="breadcrumb">
<li class="breadcrumb-item">
<a href="@Url.Action("Administracion", "Home")">Administración</a>
</li>
<li class="breadcrumb-item">
<a href="@Url.Action("Index")">Máquinas</a>
</li>
<li class="breadcrumb-item active" aria-current="page">
Modificar
</li>
</ol>
</nav>
</div>
</div>
</div>
</div>
<!-- ============================================================== -->
<!-- End Bread crumb -->
<!-- ============================================================== -->
<!-- ============================================================== -->
<!-- Container fluid -->
<!-- ============================================================== -->
<div class="container-fluid">
<!-- ============================================================== -->
<!-- Start Page Content -->
<!-- ============================================================== -->
<div class="row">
<div class="col-12">
<div class="card shadow-sm">
<div class="card-body">
@using (Html.BeginForm("Editar", "Maquinas", FormMethod.Post, new { autocomplete = "off", enctype = "multipart/form-data" }))
{
@Html.AntiForgeryToken()
@Html.HiddenFor(model => model.Id)

<div class="row">
<div class="col-md-12">
@Html.ValidationSummary(true, "")
</div>
</div>

<div class="row">
<div class="col-sm-12 col-md-4">
<div class="form-group">
@Html.LabelFor(model => model.Codigo)
@Html.TextBoxFor(model => model.Codigo, "", new { @class = "form-control form-control-sm" })
@Html.ValidationMessageFor(model => model.Codigo)
</div>
</div>

<div class="col-sm-12 col-md-4">
<div class="form-group">
@Html.LabelFor(model => model.Nombre)
@Html.TextBoxFor(model => model.Nombre, "", new { @class = "form-control form-control-sm" })
@Html.ValidationMessageFor(model => model.Nombre)
</div>
</div>

<div class="col-sm-12 col-md-4">
<div class="form-group">
@Html.LabelFor(model => model.NumeroActivo)
@Html.TextBoxFor(model => model.NumeroActivo, "", new { @class = "form-control form-control-sm" })
@Html.ValidationMessageFor(model => model.NumeroActivo)
</div>
</div>

<div class="col-sm-12 col-md-4">
<div class="form-group">
@Html.LabelFor(model => model.IdTipoMaquina)
@Html.DropDownListFor(model => model.IdTipoMaquina, new List<SelectListItem>(ViewBag.ListaTiposMaquina), "Seleccione el tipo de máquina", new { @class =
"form-control form-control-sm" })
@Html.ValidationMessageFor(model => model.IdTipoMaquina)
</div>
</div>

<div class="col-sm-12 col-md-4">
<div class="form-group">
@Html.LabelFor(model => model.FechaAdquisicion)
<br />
@Html.EditorFor(model => model.FechaAdquisicion, "MM/dd/yyyy", new { @class = "form-control form-control-sm" })
@Html.ValidationMessageFor(model => model.FechaAdquisicion)
</div>
</div>

<div class="col-sm-12 col-md-4">
<div class="form-group">
@Html.LabelFor(model => model.Activo)
<br />
@Html.EditorFor(model => model.Activo, "", new { @class = "form-control" })
</div>
</div>

<div class="col-sm-12 col-md-6">
<div class="form-group">
@Html.LabelFor(model => model.URLImagen)
<img src="@Model.URLImagen.AbsolutePath" class="img-thumbnail" alt="Imagen de la maquina">
</div>
</div>

<div class="col-sm-12 col-md-6">
<div class="form-group">
@Html.LabelFor(model => model.Imagen)
<span class="small d-block">Si no se especifica una nueva imagen, la actual será conservada</span>
@Html.TextBoxFor(model => model.Imagen, new { @class = "form-control form-control-sm", type = "file" })
@Html.ValidationMessageFor(model => model.Imagen, "", new { @class = "text-danger d-block" })
</div>
</div>
</div>

<div class="row mt-2">
<div class="col-sm-12">
Grupos musculares
</div>
<div class="col-sm-12 mt-2">
<div class="row">
@foreach (var GrupoMuscular in ViewBag.GruposMusculares)
{
<div class="col-sm-12 col-md-3 d-inline">
<div class="row">
<div class="col-1 d-inline">
<input type="checkbox" id="G_@GrupoMuscular.Value" name="G_@GrupoMuscular.Value" value="@GrupoMuscular.Value" />
</div>
<div class="clearfix"></div>
<div class="col-10">
<label for="G_@GrupoMuscular.Value">@GrupoMuscular.Text</label>
</div>
</div>
</div>
}
</div>
</div>
</div>

<div class="row mt-2">
<div class="col-12">
<input value="Guardar" class="btn btn-sm btn-default" type="submit" />
@Html.ActionLink("Regresar", "Index", null, null, new { @class = "btn btn-sm btn-secondary" })
</div>
</div>
}
</div>
</div>
</div>
</div>
<!-- ============================================================== -->
<!-- End Page Content -->
<!-- ============================================================== -->
</div>
<!-- ============================================================== -->
<!-- End Container fluid -->
<!-- ============================================================== -->
@section Scripts{
@{
await Html.RenderPartialAsync("_ValidationScriptsPartial");
}

<script type="text/javascript">
$(document).ready(function () {
MarcarCheckbox();
});

function MarcarCheckbox() {
const GruposMuscularesMaquina = @Html.Raw(@Json.Serialize(@Model.GruposMusculares));

// Recorrer todos los elementos HTML que son CheckBox
$("input[type=checkbox]").each(function () {
var IdCheckbox = this.value;

// Marcar los grupos musculares
$.each(GruposMuscularesMaquina, function (index, value) {
let GrupoMuscularMaquina = value.id;
console.log(GrupoMuscularMaquina);

if (IdCheckbox == GrupoMuscularMaquina) {
$('#G_' + IdCheckbox).prop("checked", true);
}
});
});
}
</script>
} *@
