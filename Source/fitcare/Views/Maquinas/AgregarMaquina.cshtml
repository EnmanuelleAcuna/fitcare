@model AgregarMaquinaViewModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Máquinas";
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-5 align-self-center">
            <h4 class="page-title">Agregar máquina</h4>
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Administracion", "Home")">Administración</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("ListarMaquinas")">Máquinas</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Agregar
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    @using (Html.BeginForm("AgregarMaquina", "Maquinas", FormMethod.Post, new { autocomplete = "off", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-12">
                                @Html.ValidationSummary(true, "")
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12 col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Codigo)
                                    @Html.TextBoxFor(model => model.Codigo, "", new { @class = "form-control form-control-sm", placeholder = "Digite el código de la máquina" })
                                    @Html.ValidationMessageFor(model => model.Codigo, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Nombre)
                                    @Html.TextBoxFor(model => model.Nombre, "", new { @class = "form-control form-control-sm", placeholder = "Digite el nombre de la máquina" })
                                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.CodigoActivo)
                                    @Html.TextBoxFor(model => model.CodigoActivo, "", new { @class = "form-control form-control-sm", placeholder = "Digite el número de activo de la máquina" })
                                    @Html.ValidationMessageFor(model => model.CodigoActivo, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.IdTipoMaquina)
                                    @Html.DropDownListFor(model => model.IdTipoMaquina, new List<SelectListItem>(ViewBag.ListaTiposMaquina), "Seleccione el tipo de máquina", new { @class = "form-control form-control-sm" })
                                    @Html.ValidationMessageFor(model => model.IdTipoMaquina)
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.FechaAdquisicion)
                                    <br />
                                    @Html.EditorFor(model => model.FechaAdquisicion, "MM/dd/yyyy", null, new { @class = "form-control form-control-sm" })
                                    @Html.ValidationMessageFor(model => model.FechaAdquisicion, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Activo)
                                    <br />
                                    @Html.EditorFor(model => model.Activo, "", new { @class = "form-control" })
                                </div>
                            </div>
                        </div>

                        <div class="row mt-2">
                            <div class="col-12">
                                <input value="Guardar" class="btn btn-sm btn-default" type="submit" />
                                @Html.ActionLink("Regresar", "ListarMaquinas", null, null, new { @class = "btn btn-sm btn-secondary" })
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
