@model IEnumerable<RutinaViewModel>

@{
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
	ViewBag.Title = "Rutinas";
}

<div class="page-breadcrumb">
	<div class="row">
		<div class="col-5 align-self-center">
			<h4 class="page-title">Lista de rutinas</h4>
		</div>
		<div class="col-7 align-self-center">
			<div class="d-flex align-items-center justify-content-end">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="@Url.Action("Administracion", "Home")">Administración</a>
						</li>
						<li class="breadcrumb-item active" aria-current="page">
							Rutinas
						</li>
					</ol>
				</nav>
			</div>
		</div>
	</div>
</div>

<div class="container-fluid">
	<div class="row">
		<div class="col-12">
			<div class="card shadow-sm">
				<div class="card-body">
					<a asp-action="Agregar" class="btn btn-sm btn-default">Agregar rutina</a>

					<hr />

					<div class="table-responsive">
						<table class="table table-hover table-sm">
							<thead>
								<tr>
									<th>@Html.DisplayNameFor(m => m.FirstOrDefault().Instructor)</th>
									<th>@Html.DisplayNameFor(m => m.FirstOrDefault().Cliente)</th>
									<th>@Html.DisplayNameFor(m => m.FirstOrDefault().FechaRealizacion)</th>
									<th>@Html.DisplayNameFor(m => m.FirstOrDefault().FechaInicio)</th>
									<th>@Html.DisplayNameFor(m => m.FirstOrDefault().FechaFin)</th>
									<th>@Html.DisplayNameFor(m => m.FirstOrDefault().CantidadEjercicios)</th>
									<th>@Html.DisplayNameFor(m => m.FirstOrDefault().Objetivos)</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var Rutina in Model)
								{
									<tr>
										<td>@Rutina.Instructor</td>
										<td>@Rutina.Cliente</td>
										<td>@Rutina.FechaRealizacion</td>
										<td>@Rutina.FechaInicio</td>
										<td>@Rutina.FechaFin</td>
										<td>@Rutina.CantidadEjercicios</td>
										<td>@Rutina.Objetivos</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
